  \setcounter{step@count}{1}%
  \@for\@ii:=#1\do{%
    \only<.(\thestep@count)|handout: 0|trans: 0>{\@ii}%
    \refstepcounter{step@count}%
  }%
  \only<.(\thestep@count)->{#2}%
}

